
#include "../recoil_common_includes.h"

piece base, spinner;

static-var  extractionRate, Stunned;



#include "../damagedsmoke.h"
Create()
{
	extractionRate = 0;
	//SLEEP_UNTIL_UNITFINISHED;
	start-script DamagedSmoke();
}

Activate()
{
	if (Stunned) {
		return(0);
	}
	set ARMORED to 0;
	spin spinner around y-axis speed extractionRate accelerate 90;

	move spinner to x-axis [0] speed [144.196987];
	move spinner to x-axis [0] now;
	wait-for-move spinner along x-axis;

	turn spinner to x-axis <-100> speed <32.184329>;
	turn spinner to x-axis <-100> now;
	wait-for-turn pieceName around y-axis;

	scale spinner to z-axis [0] speed [1000];
	scale spinner to z-axis [0] now;
	wait-for-scale spinner along z-axis;
}

Deactivate()
{
	stop-spin spinner around y-axis decelerate 180;
	set ARMORED to 1;
}

SetStunned(State)
{
	State = Stunned;
	if (Stunned) {
	    call-script Deactivate();
	}else{
	     call-script Activate();
	}
}


SetSpeed(windOrMetal)
{
	extractionRate = windOrMetal * 10;
	if (extractionRate > 0) call-script Activate(); // Because SetSpeed is called after Activate
}

#define SMOKEPIECE base

// this is what a pure hitbyweapon can look like, without any of the motion garbage
HitByWeapon() //weaponID is always 0,lasers and flamers give angles of 0
{
	//if( get BUILD_PERCENT_LEFT) return (0);
	signal 2;
	set-signal-mask 2;
	set ACTIVATION to 0;
	sleep 8000;
	set ACTIVATION to 100;
}

Killed(severity, corpsetype)
{
	if( severity <= 25 )
	{
		corpsetype = 1 ;
		explode base type BITMAPONLY | NOHEATCLOUD;
		explode spinner type FIRE | SMOKE | FALL | NOHEATCLOUD;
		return(corpsetype);
	}
	if( severity <= 50 )
	{
		corpsetype = 2 ;
		explode base type BITMAPONLY | NOHEATCLOUD;
		explode spinner type EXPLODE_ON_HIT | FIRE | SMOKE | FALL | NOHEATCLOUD;
		return(corpsetype);
	}
	if( severity <= 99 )
	{
		corpsetype = 3 ;
		explode base type BITMAPONLY | NOHEATCLOUD;
		explode spinner type EXPLODE_ON_HIT | FIRE | SMOKE | FALL | NOHEATCLOUD;
		return(corpsetype);
	}
	corpsetype = 3 ;
		explode base type BITMAPONLY | NOHEATCLOUD;
		explode spinner type EXPLODE_ON_HIT | FIRE | SMOKE | FALL | NOHEATCLOUD;
	return corpsetype;
}
